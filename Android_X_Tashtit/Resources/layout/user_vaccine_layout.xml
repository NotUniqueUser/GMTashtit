<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vaccine User"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textColor="@android:color/holo_blue_bright"
        android:gravity="center"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="ID:"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/uvEtTz"
            android:layout_width="0sp"
            android:layout_weight="5"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/uvBtnLoad"
            android:layout_width="0sp"
            android:text="load"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>

    <TextView
        android:id="@+id/uvTvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name - Family"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:textColor="@color/design_default_color_secondary"/>

    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">
        
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="No."/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="Date"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="Weeks"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginHorizontal="20sp"
        android:orientation="horizontal">
        
        <!--TODO-->
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="1"/>
        <TextView
            android:id="@+id/uvTvDate1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="Date"/>
        <TextView
            android:id="@+id/uvTvWeeks1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="Weeks"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginHorizontal="20sp"
        android:orientation="horizontal">
        
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="2"/>
        <TextView
            android:id="@+id/uvTvDate2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="Date"/>
        <TextView
            android:id="@+id/uvTvWeeks2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="Weeks"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20sp"
        android:layout_height="40sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="3"/>
        <TextView
            android:id="@+id/uvTvDate3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="Date"/>
        <TextView
            android:id="@+id/uvTvWeeks3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:text="Weeks"/>
        <!--TODO-->
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="0sp"
        android:layout_width="match_parent"
        android:padding="20sp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <com.google.android.material.button.MaterialButton
            android:layout_width="0sp"
            android:text="Vaccine"
            android:id="@+id/uvBtnVaccine"
            android:background="#0f32fc"
            android:layout_marginRight="20sp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="10sp"
            android:text="finish"
            android:id="@+id/uvBtnCancel"
            android:background="#ec332f"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        </LinearLayout>
</LinearLayout>

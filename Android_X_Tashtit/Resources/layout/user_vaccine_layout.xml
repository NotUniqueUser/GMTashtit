<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Vaccine User"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="35sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ID:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/uvEtTz"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="5" />

        <Button
            android:id="@+id/uvBtnLoad"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:text="load" />
    </LinearLayout>

    <TextView
        android:id="@+id/uvTvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="Name - Family"
        android:textColor="@color/design_default_color_secondary"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No."
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Weeks"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <!--TODO-->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/uvTvDate1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/uvTvWeeks1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Weeks"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/uvTvDate2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/uvTvWeeks2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Weeks"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/uvTvDate3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/uvTvWeeks3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Weeks"
            android:textSize="20sp" />
        <!--TODO-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0sp"
        android:orientation="horizontal"
        android:padding="20sp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/uvBtnVaccine"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_marginRight="20sp"
            android:layout_weight="2"
            android:background="#0f32fc"
            android:text="Vaccine" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/uvBtnCancel"
            android:layout_width="10sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ec332f"
            android:text="finish" />
    </LinearLayout>
</LinearLayout>
